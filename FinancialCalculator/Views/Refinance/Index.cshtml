@model FinancialCalculator.Models.RefinanceCalculator.RefinancingViewModel
@using System.Globalization

@{
    ViewData["Title"] = "Калкулатор за рефинансиране";
    var bg = CultureInfo.GetCultureInfo("bg-BG");

    string N2(decimal v) => v.ToString("N2", bg);
    string P2(decimal v) => v.ToString("N2", bg) + " %";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Index" method="post" class="mt-3" id="refiForm">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <fieldset class="mb-3" style="border:1px solid #444; padding:12px; border-radius:8px;">
        <legend style="padding:0 8px;">Настоящ кредит</legend>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="CurrentPrincipal" class="form-label"></label>
                <input asp-for="CurrentPrincipal" class="form-control decimal-input" inputmode="decimal" />
                <span asp-validation-for="CurrentPrincipal" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="CurrentAprPercent" class="form-label"></label>
                <input asp-for="CurrentAprPercent" class="form-control decimal-input" inputmode="decimal" />
                <span asp-validation-for="CurrentAprPercent" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="CurrentTermMonths" class="form-label"></label>
                <input asp-for="CurrentTermMonths" class="form-control" />
                <span asp-validation-for="CurrentTermMonths" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="PaidInstallments" class="form-label"></label>
                <input asp-for="PaidInstallments" class="form-control" />
                <span asp-validation-for="PaidInstallments" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="EarlyRepaymentPenaltyPercent" class="form-label"></label>
                <input asp-for="EarlyRepaymentPenaltyPercent" class="form-control decimal-input" inputmode="decimal" />
                <span asp-validation-for="EarlyRepaymentPenaltyPercent" class="text-danger"></span>
            </div>
        </div>
    </fieldset>

    <fieldset class="mb-3" style="border:1px solid #444; padding:12px; border-radius:8px;">
        <legend style="padding:0 8px;">Нов кредит</legend>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="NewAprPercent" class="form-label"></label>
                <input asp-for="NewAprPercent" class="form-control decimal-input" inputmode="decimal" />
                <span asp-validation-for="NewAprPercent" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="NewFeesPercent" class="form-label"></label>
                <input asp-for="NewFeesPercent" class="form-control decimal-input" inputmode="decimal" />
                <span asp-validation-for="NewFeesPercent" class="text-danger"></span>
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="NewFeesAmount" class="form-label"></label>
                <input asp-for="NewFeesAmount" class="form-control decimal-input" inputmode="decimal" />
                <span asp-validation-for="NewFeesAmount" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-2">
                <div class="form-check">
                    <input asp-for="CapitalizeFees" class="form-check-input" />
                    <label asp-for="CapitalizeFees" class="form-check-label"></label>
                </div>
            </div>
        </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Изчисли</button>
</form>

@if (Model.HasResult)
{
    <hr class="my-4" />
    <h4 class="mb-3">Резултати</h4>

    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width:35%">Резултат</th>
                    <th style="width:20%">Текущ кредит</th>
                    <th style="width:20%">Нов кредит</th>
                    <th style="width:25%">+/- Спестявания</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Лихва</td>
                    <td>@P2(Model.CurrentAprPercent)</td>
                    <td>@P2(Model.NewAprPercent)</td>
                    <td></td>
                </tr>

                <tr>
                    <td>Срокове на кредитите</td>
                    <td>@Model.CurrentTermMonths</td>
                    <td>@Model.RemainingMonths</td>
                    <td></td>
                </tr>

                <tr>
                    <td>Такси</td>
                    <td>
                        <div><strong>@N2(Model.PenaltyAmount)</strong></div>
                        <div class="text-muted" style="font-size:0.9em;">такса за предсрочно погасяване</div>
                    </td>
                    <td>
                        <div><strong>@N2(Model.FeesAmount)</strong></div>
                        <div class="text-muted" style="font-size:0.9em;">първоначални такси</div>
                    </td>
                    <td></td>
                </tr>

                <tr>
                    <td>Месечна вноска</td>
                    <td>@N2(Model.CurrentMonthlyPayment)</td>
                    <td>@N2(Model.NewMonthlyPayment)</td>
                    <td class="@(Model.MonthlyDiff >= 0 ? "text-success" : "text-danger")">
                        @N2(Model.MonthlyDiff)
                    </td>
                </tr>

                <tr>
                    <td>Общо изплатени (от сега до края)</td>
                    <td>@N2(Model.TotalOldRemaining)</td>
                    <td>@N2(Model.TotalNewRemaining)</td>
                    <td class="@(Model.Savings >= 0 ? "text-success" : "text-danger")">
                        @N2(Model.Savings)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex align-items-start gap-3 mt-3">
        <div style="font-size:34px; line-height:1;">
            @(Model.Savings >= 0 ? "✅" : "⚠️")
        </div>

        <div>
            @if (Model.Savings >= 0)
            {
                <div>
                    Според въведените от Вас параметри и последвалото изчисление – има смисъл да рефинансирате вашето задължение,
                    тъй като икономията от рефинансирането е по-висока от цената на настоящото Ви задължение.
                </div>
            }
            else
            {
                <div>
                    Според въведените от Вас параметри – към момента рефинансирането не изглежда изгодно,
                    защото общите разходи при новия кредит са по-високи.
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const form = document.getElementById('refiForm');
            const inputs = document.querySelectorAll('.decimal-input');

            function normalize(el) {
                if (!el || !el.value) return;
                el.value = el.value.replace(/\s+/g, '').trim();
            }

            inputs.forEach(i => {
                i.addEventListener('blur', () => normalize(i));
                i.addEventListener('change', () => normalize(i));
            });

            form?.addEventListener('submit', function () {
                inputs.forEach(i => normalize(i));
            });
        })();
    </script>
}